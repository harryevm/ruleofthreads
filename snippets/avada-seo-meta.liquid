{%- assign avada_seo_ovr_product_ids = "" -%}
{% if request.page_type == 'product' %}
{%- unless avada_seo_ovr_product_ids contains product.id -%}
{%- capture avada_seo_meta_title -%}Shop {{ shop.name }} | {{ product.title }}{%- endcapture -%}
{%- capture avada_seo_meta_description -%}Buy the {{ product.title }} today and get 10% Off your first order! The reviews for the {{ product.title }} speak for themself!{%- endcapture -%}
{% endunless %}
{% endif %}

{% if request.page_type == 'collection' %}
{%- unless avada_seo_ovr_collection_ids contains collection.id -%}
{%- capture avada_seo_meta_title -%}{{ collection.title }}{%- endcapture -%}
{%- capture avada_seo_meta_description -%}Buy the {{ collection.title }} at {{ shop.name }}. ✓ Get 10% Off First Orders ✓ Free Returns & Exchanges ✓ Free Shipping Over $100.{%- endcapture -%}
{% endunless %}
{% endif %}

{% if avada_seo_meta_title %}
{%- assign seo_title = avada_seo_meta_title | strip_html | strip -%}
{%- assign page_title = seo_title -%}
{%- assign og_title = seo_title -%}
{% endif %}

{% if avada_seo_meta_description %}
{%- assign page_description = avada_seo_meta_description | strip_html | strip -%}
{%- assign og_description = page_description -%}
{% endif %}